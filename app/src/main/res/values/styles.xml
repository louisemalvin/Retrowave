<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:app="http://schemas.android.com/apk/res-auto">
    <style name="app_title">
        <item name="android:fontFamily">@font/koulen</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/red</item>
    </style>
    <style name="app_title.secondary">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="header">
        <item name="android:fontFamily">@font/hammersmith_one</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="file_name">
        <item name="android:fontFamily">@font/indie_flower</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="timestamp">
        <item name="android:fontFamily">@font/aubrey</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="layeredButton">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">90dp</item>
        <item name="heightDifference">20dp</item>
        <item name="cornerRadius">15dp</item>
    </style>
    <style name="layeredButton.primary">
        <item name="topLayerColor">@color/red</item>
        <item name="bottomLayerColor">@color/dark_red</item>
    </style>
    <style name="layeredButton.secondary">
        <item name="topLayerColor">@color/blue</item>
        <item name="bottomLayerColor">@color/dark_blue</item>
    </style>
    <style name="layeredButton.tertiary">
        <item name="topLayerColor">@color/yellow</item>
        <item name="bottomLayerColor">@color/dark_yellow</item>
    </style>
</resources>